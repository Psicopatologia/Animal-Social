<% title = __("signup") %>
<!DOCTYPE html>
<html lang="<%= locale %>">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <% include ../partials/header %>
    <main class="container text-center mt-5">
        <form class="auth" action="/signup" method="POST">
            <h1 class="h3"><%= __("signup") %></h1>
            <div class="form-group text-left">
                <label for="name"><%= __("name") %></label>
                <input class="form-control" type="text" name="name" id="name" required autofocus>
            </div>
            <div class="form-group text-left">
                <label for="email"><%= __("email") %></label>
                <input class="form-control" type="email" name="email" id="email" required>
            </div>
            <div class="form-group text-left">
                <label for="password"><%= __("password") %></label>
                <input class="form-control" type="password" name="password" id="password" required>
            </div>
            <button class="btn btn-primary" type="submit"><%= __("signup") %></button>
            <% if (signupMessage.length > 0) { %>
            <div class="alert alert-danger mt-3" role="alert">
                <%= __(signupMessage[0]) %>
            </div>
            <% } %>
        </form>
    </main>
    <% include ../partials/foot %>
</body>

</html>